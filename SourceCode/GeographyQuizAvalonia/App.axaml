<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:GeographyQuizAvalonia"
             x:Class="GeographyQuizAvalonia.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <!-- Other global styles or resource dictionaries can be added here -->
        <!-- Example: <StyleInclude Source="/Styles/GlobalStyles.axaml" /> -->
    </Application.Styles>
</Application>
